{
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "declaration": false,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "src/vitest.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "node_modules",
    "docs/**/*",
    "dist"
  ]
}
