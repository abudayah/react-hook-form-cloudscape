{
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "./",
    "declarationDir": "./components",
    "sourceMap": true
  },
  "include": [
    "src",
    "src/vitest.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ],
  "exclude": [
    "node_modules",
    "docs/**/*"
  ]
}
