{
  // Format on save
  "editor.formatOnSave": true,

  // ESLint settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onSave",

  // Disable built-in formatters to avoid conflicts
  "eslint.format.enable": true,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  // Formatting behavior
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",

  // Optional: Improve performance and editor usability
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [120]
}
